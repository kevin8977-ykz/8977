<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowenode.springboot.dao.UserDao">
    <select id="findAll" resultType="com.bjpowenode.springboot.domain.User">
      select  * from  tbl_user
    </select>

    <select id="findById" resultType="com.bjpowenode.springboot.domain.User">
        select * from tbl_user where id=#{id}
    </select>

    <update id="updateById">
        update  tbl_user
        <set>
            <if test="user.name!=null and user.name !=''">
                name = #{user.name},
            </if>
            <if test="user.email!=null and user.email !=''">
                email = #{user.email},
            </if>
        </set>
        where  id =#{user.id}
    </update>

    <insert id="save">
        insert into tbl_user values(
        #{id},
        #{deptId},
        #{loginAct},
        #{name},
        #{loginPwd},
        #{email},
        #{expireTime},
        #{lockStatus},
        #{allowIps},
        #{createBy},
        #{createTime},
        #{editBy},
        #{editTime}
        )
    </insert>

    <delete id="deleteById">
        delete from tbl_user where id=#{id}
    </delete>

</mapper>


